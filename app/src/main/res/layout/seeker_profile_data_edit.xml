<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     app:layout_behavior="@string/appbar_scrolling_view_behavior"
     android:layout_marginTop="@dimen/activity_horizontal_margin"
     android:layout_height="match_parent">
     <RelativeLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">

	  <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="30dp"
	       android:layout_marginLeft="30dp"
	       android:layout_marginRight="30dp"
	       android:orientation="vertical">

	       <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Name"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:id="@+id/name_seeker"
		    android:layout_height="wrap_content"
		    android:text="Vishnu Sai Nath Karumuri"
		    android:textSize="20dp" />

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Email"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:id="@+id/mail_seeker"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="vishnusai.karumuri@gmail.com"
		    android:textSize="20dp" />

	       <TextView
		    android:id="@+id/profession_tv"
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Profession"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:id="@+id/seeker_profession"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="XXXXXXXX"
		    android:textSize="20dp"/>

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Mobile Number"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="+91-9885877727"
		    android:textSize="20dp"
		    android:id="@+id/seeker_mobile"
		    android:layout_marginBottom="10dp"/>

	       <include layout="@layout/item_divider"/>

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Aadhaar"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="XXXX-XXXX-XXXX"
		    android:id="@+id/seeker_aadhaar"
		    android:textSize="20dp"/>

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Address"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/seeker_address"
		    android:text="H.No - XX , Road.No - YY"
		    android:textSize="20dp"/>

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="State"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Andhra Pradesh"
		    android:id="@+id/seeker_state"
		    android:textSize="20dp"/>

	       <TextView
		    android:layout_marginTop="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="City"
		    android:textSize="13dp"
		    android:textColor="@android:color/holo_orange_dark"/>

	       <EditText
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Guntur"
		    android:id="@+id/seeker_city"
		    android:textSize="20dp"/>

	       <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:text="Commit"
		    android:backgroundTint="@color/colorPrimary"/>
	  </LinearLayout>

     </RelativeLayout>
</android.support.v4.widget.NestedScrollView>